{
  "manifest_version": 3,
  "name": "Image Detector Extension",
  "version": "1.0",
  "description": "Detects and classifies images on the webpage using a TensorFlow.js model.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Run Image Detector"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "model/*",
        "tf.min.js",
        "tf-backend-wasm.js",
        "tfjs-backend-wasm.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
